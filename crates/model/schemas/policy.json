{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Policy",
  "type": "object",
  "required": [
    "kind",
    "slug",
    "uid"
  ],
  "properties": {
    "kind": {
      "$ref": "#/definitions/PolicyKind"
    },
    "slug": {
      "type": "string"
    },
    "uid": {
      "type": "integer",
      "format": "int32"
    }
  },
  "definitions": {
    "PolicyKind": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "PasswordStrength",
            "Expression"
          ]
        },
        {
          "type": "object",
          "required": [
            "PasswordExpiry"
          ],
          "properties": {
            "PasswordExpiry": {
              "type": "object",
              "required": [
                "max_age"
              ],
              "properties": {
                "max_age": {
                  "type": "integer",
                  "format": "int64"
                }
              }
            }
          },
          "additionalProperties": false
        }
      ]
    }
  }
}