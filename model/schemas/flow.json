{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Flow",
  "type": "object",
  "required": [
    "authentication",
    "bindings",
    "designation",
    "entries",
    "slug",
    "title",
    "uid"
  ],
  "properties": {
    "authentication": {
      "$ref": "#/definitions/AuthenticationRequirement"
    },
    "bindings": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/FlowBinding"
      }
    },
    "designation": {
      "$ref": "#/definitions/FlowDesignation"
    },
    "entries": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/FlowEntry"
      }
    },
    "slug": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "uid": {
      "type": "integer",
      "format": "int32"
    }
  },
  "definitions": {
    "AuthenticationRequirement": {
      "type": "string",
      "enum": [
        "superuser",
        "required",
        "none",
        "ignored"
      ]
    },
    "FlowBinding": {
      "type": "object",
      "required": [
        "enabled",
        "kind",
        "negate",
        "order"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "kind": {
          "$ref": "#/definitions/FlowBindingKind"
        },
        "negate": {
          "type": "boolean"
        },
        "order": {
          "type": "integer",
          "format": "int16"
        }
      }
    },
    "FlowBindingKind": {
      "anyOf": [
        {
          "type": "string",
          "format": "uuid"
        },
        {
          "type": "string",
          "format": "uuid"
        },
        {
          "$ref": "#/definitions/Reference"
        }
      ]
    },
    "FlowDesignation": {
      "type": "string",
      "enum": [
        "authentication"
      ]
    },
    "FlowEntry": {
      "type": "object",
      "required": [
        "bindings",
        "ordering",
        "stage"
      ],
      "properties": {
        "bindings": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FlowBinding"
          }
        },
        "ordering": {
          "type": "integer",
          "format": "int16"
        },
        "stage": {
          "$ref": "#/definitions/Reference"
        }
      }
    },
    "Reference": {
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "$ref": "#/definitions/ReferenceId"
        }
      }
    },
    "ReferenceId": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "integer",
          "format": "int32"
        }
      ]
    }
  }
}